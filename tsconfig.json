{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "experimentalDecorators": true,          // Enable experimental decorators
    "emitDecoratorMetadata": true            // Emit decorator metadata
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
